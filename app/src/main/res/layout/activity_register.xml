<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/pisp"
        android:layout_marginTop="80dp"></ImageView>
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="手机号码："
                android:textSize="15dp"
                android:textColor="@color/dkgray"></TextView>

            <EditText
                android:id="@+id/tel"

                android:textColor="@color/dkgray"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"></EditText>
            <Button
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                ></Button>
        </LinearLayout>
        <LinearLayout
    android:layout_marginTop="40dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/dkgray"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="密码："
        android:textSize="15dp"></TextView>

    <EditText
        android:id="@+id/psw"
        android:textColor="@color/dkgray"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"
        android:textSize="20dp"
        ></EditText>
            <Button
                android:layout_marginLeft="30dp"
                android:background="@drawable/see_able"
                android:id="@+id/change"
                android:layout_width="20dp"
                android:layout_height="20dp"></Button></LinearLayout>
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dkgray"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="确认密码："
                android:textSize="15dp"></TextView>

            <EditText
                android:id="@+id/pswsure"
                android:textColor="@color/dkgray"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="20dp"></EditText>
            <Button
                android:layout_marginLeft="30dp"
                android:background="@drawable/see_able"
                android:id="@+id/changeSure"
                android:layout_width="20dp"
                android:layout_height="20dp"></Button></LinearLayout>
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dkgray"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="验证码："
                android:textSize="15dp"></TextView>

            <EditText
                android:id="@+id/test"
                android:layout_marginLeft="15dp"
                android:textColor="@color/dkgray"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"></EditText>



        </LinearLayout>




    </RelativeLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_background"
        android:text="提交"
        android:textSize="15dp"></Button>


</LinearLayout>